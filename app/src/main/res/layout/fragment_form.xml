<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentViewGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.delacrixmorgan.wishlist.android.longform.GeneralLongForm
        android:id="@+id/generalLongForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.delacrixmorgan.wishlist.android.longform.FoodLongForm
        android:id="@+id/foodLongForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.delacrixmorgan.wishlist.android.longform.TransportLongForm
        android:id="@+id/transportLongForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>